<div class="container">
  <div class="row">
    <div class="col s2"></div>
    <div class="col s6">
<p id="notice"><%= notice %></p>

<h1>Notificaciones</h1>
<% if @notifications.length != 0 %>

<table>
  <thead>
    <tr>
      <th>Mensaje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.mensaje %></td>
        <td><%= link_to 'Marcar como leída', notification, method: :delete, data: { confirm: '¿Marcar como leida?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%else%>
<h5>No hay notificaciones</h5>
<%end%>

<br>

<%= link_to 'Volver', "/" %>

    <div class="col s6">
    </div>
    <div class="col s3"></div>
  </div>
</div>