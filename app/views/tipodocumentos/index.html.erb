<nav>
  <div class="nav-wrapper">
    <%= link_to "Tipos de documentos", "/", class:"brand-logo center" %>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li>
          <% if usuario_actual %>
            <h5>
              <%= link_to "Cerrar sesión", "cerrarSesion" %>
            </h5>
            <% end %>
        </li>
      </ul>
      <ul id="nav-mobile" class="left hide-on-med-and-down">
        <li>
          <a href="#" data-target="slide-out" class="sidenav-trigger" id="btnMenu"><i class='material-icons'>menu</i></a>
        </li>
        <li>
          <a href="/" id="btnMenu"><i class='material-icons'>home</i></a>
        </li>
      </ul>
  </div>
</nav>
<div class="container">
  <div class="row">
    <div class="col s2"></div>
    <div class="col s6">
      <p id="notice">
        <%= notice %>
      </p>

      <table>
        <thead>
          <tr>
            <th>Descripcion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @tipodocumentos.each do |tipodocumento| %>
            <tr>
              <td>
                <%= tipodocumento.descripcion %>
              </td>
              <td>
                <%= link_to '<i class="tiny material-icons">visibility</i>'.html_safe, tipodocumento %>
              </td>
              <td>
                <%= link_to '<i class="tiny material-icons">mode_edit</i>'.html_safe, edit_tipodocumento_path(tipodocumento) %>
              </td>
              <td>
                <%= link_to '<i class="tiny material-icons">delete</i>'.html_safe, tipodocumento, method: :delete, data: { confirm: '¿Seguro desea eliminar este tipo de documento?' } %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>

      <br>

      <div class="fixed-action-btn">
          <%= link_to '<i class="large material-icons">add_circle</i>'.html_safe, new_tipodocumento_path, class:"btn-floating btn-large red"  %>
      </div>

    </div>
    <div class="col s3"></div>
  </div>
</div>