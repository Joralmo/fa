<nav>
    <div class="nav-wrapper">
      <%= link_to "Usuarios", "/", class:"brand-logo center" %>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li>
              <% if usuario_actual %>
                  <h5><%= link_to "Cerrar sesión", "cerrarSesion" %></h5>
              <% end %>
          </li>
      </ul>
      <ul id="nav-mobile" class="left hide-on-med-and-down">
          <li>
            <a href="#" data-target="slide-out" class="sidenav-trigger" id="btnMenu"><i class='material-icons'>menu</i></a>
          </li>
          <li>
            <a href="/" id="btnMenu"><i class='material-icons'>home</i></a>
          </li>
      </ul>
    </div>
</nav>
<div class="container">
  <div class="row">
    <div class="col s2"></div>
    <div class="col s6">
      <p id="notice"><%= notice %></p>
      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Celular</th>
            <th>Rol</th>
            <th>Dependencium</th>
            <th>Email</th>
            <th>Tipodocumento</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @usuarios.each do |usuario| %>
            <tr>
              <td><%= usuario.nombre %></td>
              <td><%= usuario.apellido %></td>
              <td><%= usuario.celular %></td>
              <td><%= usuario.rol.descripcion %></td>
              <td><%= usuario.dependencium.descripcion %></td>
              <td><%= usuario.email %></td>
              <td><%= usuario.tipodocumento.descripcion %></td>
              <td><%= link_to '<i class="tiny material-icons">visibility</i>'.html_safe, usuario %></td>
              <td><%= link_to '<i class="tiny material-icons">mode_edit</i>'.html_safe, edit_usuario_path(usuario) %></td>
              <td><%= link_to '<i class="tiny material-icons">delete</i>'.html_safe, usuario, method: :delete, data: { confirm: '¿Seguro que desea eliminar este usuario?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <div class="fixed-action-btn">
          <%= link_to '<i class="large material-icons">add_circle</i>'.html_safe, new_usuario_path, class:"btn-floating btn-large red" %>
      </div>
    </div>
    <div class="col s3"></div>
  </div>
</div>
